package fundamentos;

import java.util.Scanner;

public class DesafioOperLogicos {

	public static void main(String[] args) {
		//Trabalho terça e quinta
		//TV 50 ou 32 e sorvete
		//Ficar em casa
		
		boolean trabalhoTerca;
		boolean trabalhoQuinta;
		boolean sorvete;
		int respostaTrabalho1;
		int respostaTrabalho2;
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.println("Trabalhou na terça? 1 para sim, 2 para não");
		respostaTrabalho1 = entrada.nextInt();
		
		System.out.println("Trabalhou na quinta? 1 para sim, 2 para não");
		respostaTrabalho2 = entrada.nextInt();
		
		if(respostaTrabalho1 == 1) {
			trabalhoTerca = true;
			sorvete = true;
		} else {
			trabalhoTerca = false;
			sorvete = false;
		}
		
		if(respostaTrabalho2 == 1) {
			trabalhoQuinta = true;
			sorvete = true;
		} else {
			trabalhoQuinta = false;
			sorvete = false;
		}
		
		if(trabalhoTerca == true && trabalhoQuinta == true && sorvete == true) {
			System.out.println("Comprou a TV de 50 polegadas e tomou sorvete!!");
		} if(trabalhoTerca == true || trabalhoQuinta == true || sorvete == true) {
			System.out.println("Comprou a TV de 32 polegadas e tomou sorvete!!");
		} else {
			System.out.println("Ficou em casa!!");
		}
		
		entrada.close();
		

	}

}
